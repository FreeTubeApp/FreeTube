{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "exclude": ["src/main"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
